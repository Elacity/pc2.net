{
  "server": {
    "port": 4200,
    "host": "0.0.0.0"
  },
  "owner": {
    "wallet_address": null,
    "tethered_wallets": []
  },
  "storage": {
    "ipfs_repo_path": "./data/ipfs",
    "database_path": "./data/pc2.db"
  },
  "security": {
    "session_duration_days": 7,
    "rate_limit_window_ms": 60000,
    "rate_limit_max_requests": 100
  },
  "boson": {
    "enabled": true,
    "gateway_url": "https://demo.ela.city",
    "public_domain": "ela.city",
    "auto_connect": true,
    "privacy_mode": false
  },
  "ai": {
    "enabled": true,
    "defaultProvider": "ollama",
    "providers": {
      "ollama": {
        "enabled": true,
        "baseUrl": "http://localhost:11434",
        "defaultModel": "deepseek-r1:1.5b"
      },
      "openai": {
        "enabled": false,
        "apiKey": ""
      },
      "claude": {
        "enabled": false,
        "apiKey": ""
      }
    }
  },
  "resources": {
    "storage": {
      "limit": "auto",
      "reserve_free_space": "10GB"
    },
    "compute": {
      "max_cpu_percent": 80,
      "max_memory_mb": "auto",
      "max_concurrent_wasm": 4,
      "wasm_timeout_ms": 30000
    },
    "network": {
      "max_upload_mbps": "unlimited",
      "max_download_mbps": "unlimited",
      "max_connections": 100
    }
  }
}
