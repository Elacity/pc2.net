{
  "name": "@elastos/pc2-node",
  "version": "1.0.0",
  "description": "PC2 Production Node - Self-hosted personal cloud with ElastOS frontend built-in",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "node scripts/build-frontend.js",
    "build:backend": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch & nodemon dist/index.js",
    "clean": "node scripts/clean.js",
    "test": "npm run build:backend && node scripts/test-system.js"
  },
  "keywords": [
    "pc2",
    "personal-cloud",
    "self-hosted",
    "ipfs",
    "elastos"
  ],
  "author": "Elacity",
  "license": "AGPL-3.0",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ipfs-core": "^0.18.1",
    "multer": "^2.0.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.18.0"
  }
}
