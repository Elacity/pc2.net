{
  "name": "@elastos/pc2-node",
  "version": "2.5.1",
  "description": "PC2 Production Node - Self-hosted personal cloud with ElastOS frontend built-in",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "node scripts/build-frontend.js",
    "build:backend": "tsc",
    "start": "node dist/index.js",
    "start:local": "npm run build && node dist/index.js",
    "dev": "tsx watch --exclude 'data/**' --exclude 'frontend/**' src/index.ts",
    "dev:clean": "pkill -9 -f 'tsx.*pc2-node' 2>/dev/null; sleep 1; npm run dev",
    "dev:legacy": "tsc --watch & nodemon dist/index.js",
    "clean": "node scripts/clean.js",
    "test": "npm run build:backend && node scripts/test-system.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "keywords": [
    "pc2",
    "personal-cloud",
    "self-hosted",
    "ipfs",
    "elastos"
  ],
  "author": "Elacity",
  "license": "AGPL-3.0",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@chainsafe/libp2p-yamux": "^8.0.1",
    "@google/genai": "^1.38.0",
    "@helia/strings": "^5.0.3",
    "@helia/unixfs": "^6.0.4",
    "@libp2p/bootstrap": "^12.0.11",
    "@libp2p/identify": "^4.0.10",
    "@libp2p/kad-dht": "^16.1.3",
    "@libp2p/mplex": "^12.0.10",
    "@libp2p/noise": "^1.0.1",
    "@libp2p/tcp": "^11.0.9",
    "@libp2p/websockets": "^10.1.2",
    "@types/multer": "^2.0.0",
    "@wasmer/wasi": "^1.2.2",
    "@wasmer/wasmfs": "^0.12.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^9.2.2",
    "blockstore-fs": "^3.0.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "datastore-fs": "^11.0.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "grammy": "^1.39.3",
    "helia": "^6.0.14",
    "libp2p": "^3.1.2",
    "multer": "^2.0.2",
    "multiformats": "^13.4.2",
    "node-pty": "^1.1.0",
    "openai": "^6.16.0",
    "pdfjs-dist": "^4.0.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.2",
    "tar": "^7.5.2",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "uuid": "^10.0.0",
    "viem": "^2.45.0"
  },
  "optionalDependencies": {
    "canvas": "^2.11.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/qrcode": "^1.5.6",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.18.0"
  }
}
